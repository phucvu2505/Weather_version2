<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_date_FC10d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/img_icon_forecast_10d"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/txt_temp_max_FC10d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"/>
                //android:background="@drawable/bg_temp_max"/>

            <TextView
                android:id="@+id/txt_temp_min_FC10d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignTop="@+id/txt_temp_max_FC10d"
                android:layout_toRightOf="@id/txt_temp_max_FC10d"
                android:layout_marginLeft="10dp"/>
                //android:background="@drawable/bg_temp_min"/>
            <TextView
                android:id="@+id/txt_stt_FC10d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_temp_max_FC10d"
                android:layout_toRightOf="@id/txt_temp_min_FC10d"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/txt_speed_FC10d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_temp_max_FC10d"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txt_clouds_FC10d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_speed_FC10d"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txt_pressure_FC10d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_clouds_FC10d"
                android:layout_below="@+id/txt_speed_FC10d"
                android:layout_margin="10dp"/>

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>